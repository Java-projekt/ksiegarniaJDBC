<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="org.example.projekt.controllers.BookstoreController" spacing="20">
    <children>
        <VBox spacing="10" HBox.hgrow="NEVER">
            <ListView fx:id="recommendedBooksListView" prefWidth="200" />
            <Button text="Logout" onAction="#logout"/>
        </VBox>
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <TextField fx:id="searchField" promptText="Search Books" />
            <Button text="Search" onAction="#searchBooks" />
            <ListView fx:id="searchResultsListView" />
            <Button text="Order" onAction="#orderSelectedBook" />
        </VBox>
    </children>
    <HBox.margin>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </HBox.margin>
</HBox>
